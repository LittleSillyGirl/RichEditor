        <ImageView
            android:id="@+id/ivStrikeThrough"
            android:layout_width="@dimen/style_button_size"
            android:layout_height="@dimen/style_button_size"
            android:padding="7dp"
            android:src="@mipmap/icon_strikethrough_normal" />

        <ImageView
            android:id="@+id/ivUnderline"
            android:layout_width="@dimen/style_button_size"
