<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/editor_game_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_editor_game"
        >

        <ImageView
            android:id="@+id/ivGameIcon"
            android:layout_width="@dimen/editor_game_icon_size"
            android:layout_height="@dimen/editor_game_icon_size"
            android:src="@mipmap/icon_game_zhuoyao"
            android:layout_marginLeft="7dp"
            />

        <TextView
            android:id="@+id/tvGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:text="一起来捉妖"
            android:textSize="16dp"
            android:textColor="#ff000000"
            />

    </LinearLayout>

</FrameLayout>